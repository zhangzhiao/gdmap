<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:background="@drawable/edit_bg"
        android:layout_height="175sp">
<LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:padding="4dp"
        android:background="@drawable/edit_bg"
        android:layout_height="48sp"
        android:gravity="center"
        android:orientation="horizontal"
        >

    <TextView
            android:id="@+id/edit_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"

            android:gravity="center"
            android:hint="" />
    <Button
            android:layout_width="36sp"
            android:layout_height="36sp"
        android:layout_marginEnd="10dp"
            android:id="@+id/btn_search"
        android:background="@drawable/ss2"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"

        android:orientation="horizontal"
        android:layout_height="wrap_content">
    <Button
            android:layout_width="48sp"
            android:layout_marginEnd="30dp"
            android:id="@+id/foot"
            android:onClick="foot"
            android:background="@drawable/buxing"
            android:layout_height="48sp"/>
    <Button
            android:layout_width="48sp"
            android:id="@+id/bike"
            android:onClick="bike"
            android:background="@drawable/qixing"
            android:layout_marginEnd="30dp"
            android:layout_height="48sp"/>
    <Button
            android:layout_width="48sp"
            android:id="@+id/car"
            android:onClick="car"
            android:background="@drawable/jiache"
            android:layout_height="48sp"/>
</LinearLayout>
</LinearLayout>